{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],

    "baseUrl": "./src",
    "paths": {
      "@controller/*": ["controllers/*"],
      "@router": ["routers/index.ts"],
      "@models": ["models/index.ts"],
      "@db": ["config/db-conenction.ts"],
      "@fn": ["functions/index.ts"],
      "@email":["email/index.ts"]
    }
  },

  "include": ["*.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
